<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity__testForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="co.tenton.admin.autoshkolla.Testet.TestFormActivity">

    <RelativeLayout
        android:id="@+id/testFormToolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <android.support.v7.widget.Toolbar
            android:background="@color/toolbarColor"
            android:title="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </android.support.v7.widget.Toolbar>
        <Button
            android:id="@+id/backbuttonTestForm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/a_cancelicon"
            />

        <TextView
            android:id="@+id/testFormExamTime"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@id/testFormExamTime"
            android:layout_toStartOf="@id/testFormExamTime"
            android:layout_centerVertical="true"
            android:background="@drawable/a_clockicon"/>


        <TextView
            android:id="@+id/testFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />
    </RelativeLayout>
    <View
        android:id="@+id/lineIdtestForm"
        android:layout_below="@id/testFormToolbar"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorAccent"/>

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tenton.admin.autoshkolla.co.tenton.admin.autoshkolla.Testet.TestFormActivity"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/lineIdtestForm"
        android:id="@+id/recyclerViewTestForm"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/lineIdBottomtestForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v7.widget.RecyclerView>


    <View
        android:id="@+id/lineIdBottomtestForm"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_above="@+id/testFormBottomToolbar"
        android:background="@color/colorAccent"/>

    <RelativeLayout
        android:id="@+id/testFormBottomToolbar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <android.support.v7.widget.Toolbar
            android:background="@color/toolbarColor"
            android:title="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/pasButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:background="@drawable/a_lefticon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/testFormPreviousQuestion"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/pasButton"
            android:layout_toEndOf="@id/pasButton"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/whiteColor"
            android:textSize="18sp"
            android:text="Prapa"
        />

        <TextView
            android:id="@+id/piket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/testFormNextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_toStartOf="@+id/paraButton"
            android:layout_toLeftOf="@+id/paraButton"
            android:layout_centerVertical="true"
            android:textColor="@color/whiteColor"
            android:layout_marginTop="15dp"
            android:text="Para"
            android:typeface="normal"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/paraButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/a_righticon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>
