<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/backButtonInfo"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/a_cancelicon"/>


    <TextView
        android:id="@+id/infoFormTitle"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButtonInfo"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center" />

    <View
        android:id="@+id/lineee"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:paddingStart="100dp"
        android:layout_below="@id/infoFormTitle"
        android:layout_centerHorizontal="true"
        android:paddingEnd="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent"/>



    <TextView
        android:id="@+id/infoFormDescription"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1000"
        android:scrollbarStyle="insideOverlay"
        android:layout_below="@id/lineee"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>
