<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_raporto_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.tenton.admin.autoshkolla.MainActivitiy.Raporto_Activity">

    <RelativeLayout
        android:id="@+id/raportotoolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <android.support.v7.widget.Toolbar
            android:background="@color/toolbarColor"
            android:title="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="Raporto problemin"/>
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/a_cancelicon"/>

        <Button
            android:id="@+id/raportoBackBtn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/raportoDergo"
            android:layout_width="56dp"
            android:text="Dërgo"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/whiteColor"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/raportotoolbar"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:background="@drawable/imageview_border"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/whiteColor"
            android:layout_margin="3dp"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:id="@+id/raportoMessage"
                android:background="@color/transparent"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:hint="Përshkruani problemin ose sygjerimin tuaj ketu ..."
                android:gravity="top"
                android:layout_height="match_parent"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
