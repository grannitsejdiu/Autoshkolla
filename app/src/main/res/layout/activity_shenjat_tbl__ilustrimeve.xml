<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shenjat_tbl__ilustrimeve"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.tenton.admin.autoshkolla.Shenjat_tabeles_Ilustrimeve.Shenjat_tbl_IlustrimeveActivity">

    <RelativeLayout
        android:id="@+id/shenjatIlustrimet_FormToolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <android.support.v7.widget.Toolbar
            android:background="@color/toolbarColor"
            android:title="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </android.support.v7.widget.Toolbar>
        <Button
            android:id="@+id/shenjatIlustrimet_GridFormBackButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/a_lefticon"
            />


        <TextView
            android:id="@+id/shenjatIlustrimet_GridFormTitle"
            android:layout_toRightOf="@id/shenjatIlustrimet_GridFormBackButton"
            android:layout_toEndOf="@id/shenjatIlustrimet_GridFormBackButton"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/whiteColor"
            android:text="Shenjat e tabeles se Instrumenteve!"
            android:textSize="18sp" />

    </RelativeLayout>
    <View
        android:id="@+id/lineIdshenjatIlustrimet_GridForm"
        android:layout_below="@id/shenjatIlustrimet_FormToolbar"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorAccent"/>

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@id/lineIdshenjatIlustrimet_GridForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tenton.admin.autoshkolla.co.tenton.admin.autoshkolla.Testet.TestFormActivity"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shenjatIlustrimet_recyclerViewSVertikal"
        android:layout_below="@id/lineIdshenjatIlustrimet_GridForm"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
